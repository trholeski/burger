
<header>
  <div class="overlay"></div>
  <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
    <source src="/image/OVW2.mp4" type="video/mp4">
  </video>
<div id="welcome_text"  class="container h-100">
    <div class="d-flex text-center align-items-center">
      <div class="w-100 text-white">
        <p class="display-3">eat da burger</p>
      </div>
    </div>
</div>

</header>


<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <form class="clearfix mb-4" action="/burgers/new" method="POST">
        <div class="form-group">
          <label form="newBurger"> {{msg}} </label>
          <input type="text" id="burger_name" class="form-control" name="burger_name" value="", 
            placeholder="describe new burger">
        </div>
        <button id="submit" class="btn btn-primary float-right">Submit</button>
      </form>
      
          <h3 class='text-center'>LIST OF BURGERS</h3>
            <ul id="burger-list" class="list-group">
                {{#each burgers}}
                <form action="/burgers/devour/{{this.id}}" method="POST">
                    <li data-id="{{this.burger_name}}" class="list-group-item">
                        <pre>{{this.id}}. {{this.burger_name}}</pre>
                        {{!-- <pre>Is it devoured? {{this.devoured}}</pre> --}}
                        <pre> Is it devoured?
                            {{#if this.devoured}}
                                yes
                                {{else}}
                                no
                            {{/if}}
                        </pre>
                        
                        {{!-- <button class="btn btn-danger float-right delete">just EAT IT!!!</button> --}}
                        <input type="submit" value="just EAT IT!!!!">
                    </li>
                </form>
                {{/each}}
            </ul>
      </form>
      


    </div>
  </div>
</div>



<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>